{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es5",
		"jsx": "react",
		"lib": ["dom", "dom.iterable", "esnext"],
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"include": ["./src/**/*", "./src/**/*.spec.ts"],
	"exclude": ["node_modules", "./src/**/*.spec.ts"]
}
